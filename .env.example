# Movies API Environment Configuration
# Copy this file to .env and update with your actual values

# ===================================
# REQUIRED CONFIGURATION
# ===================================

# TMDB API Key (Required)
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Redis connection URL (Required)
# Examples:
# - Local Redis: redis://localhost:6379
# - Redis with auth: redis://username:password@localhost:6379
# - Redis Cloud: redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# ===================================
# SERVER CONFIGURATION
# ===================================

# Port for the server to listen on
PORT=3000

# Environment (development, production, test)
NODE_ENV=development

# ===================================
# TMDB API CONFIGURATION
# ===================================

# TMDB API base URL (usually no need to change)
TMDB_BASE_URL=https://api.themoviedb.org/3

# Timeout for TMDB API requests in milliseconds
TMDB_TIMEOUT_MS=500


# ===================================
# CACHE CONFIGURATION
# ===================================

# Cache Time To Live in seconds (1 hour = 3600)
CACHE_TTL_SECONDS=3600

# ===================================
# LOGGING CONFIGURATION
# ===================================

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Enable file logging (true/false)
# When true, logs will also be written to files
ENABLE_FILE_LOGGING=false